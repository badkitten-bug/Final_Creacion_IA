@model CrearCuentos.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}
<div class="container">
    <main role="main">
<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompletos)
        </dd>
        <dt class="col-sm-2">
            DNI
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class="col-sm-2">
            Nombre de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDeUsuario)
        </dd>
        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            Contraseña
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @if (Model.Estado == 1)
            {
                <select disabled class="form-control" style="width: 150px;">
                    <option value="1">Activo</option>
                </select>
            }
            else
            {
                <select disabled class="form-control" style="width: 150px;">
                    <option value="0">Inactivo</option>
                </select>
            }
        </dd>
        <dt class="col-sm-2">
            Inicial
        </dt>
        <dd class="col-sm-10">
            <div class="form-check">
                <input asp-for="PermisoInicial" type="checkbox" disabled="disabled" />
            </div>
        </dd>
        <dt class="col-sm-2">
            Primaria
        </dt>
        <dd class="col-sm-10">
            <div class="form-check">
                <input asp-for="PermisoPrimaria" type="checkbox" disabled="disabled" />
            </div>
        </dd>
        <dt class="col-sm-2">
            Secundaria
        </dt>
        <dd class="col-sm-10">
            <div class="form-check">
                <input asp-for="PermisoSecundaria" type="checkbox" disabled="disabled" />
            </div>
        </dd>
    </dl>
</div>

<div class="mt-3" style="margin-top:30px;">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Regresar a la Lista
    </a>
</div>
 </main>
    </div>